# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for source files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.prisma text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.gz binary
*.tgz binary
*.pdf binary

# Keep lockfiles normalized to LF
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf
yarn.lock text eol=lf

# Do not normalize build artifacts
.next/** -text
/dist/** -text
/out/** -text
